<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.mule.runtime</groupId>
        <artifactId>mule</artifactId>
        <version>4.1.1</version>
    </parent>
    <groupId>org.mule.distributions</groupId>
    <artifactId>mule-distributions</artifactId>
    <version>4.1.1-20210121</version>
    <packaging>pom</packaging>
    <name>Mule Distributions</name>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
            </plugin>
            <plugin>
                <artifactId>maven-install-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

    <properties>
        <mule.version>4.1.1</mule.version>
        <weaveVersion>2.1.2-20210119</weaveVersion>

        <muleEmbeddedApiVersion>1.1.1</muleEmbeddedApiVersion>

        <muleSchedulerServiceVersion>1.1.4</muleSchedulerServiceVersion>
        <muleHttpServiceVersion>1.1.1</muleHttpServiceVersion>
        <muleOAuthServiceVersion>1.1.1</muleOAuthServiceVersion>
        <muleSoapServiceVersion>1.1.2</muleSoapServiceVersion>
        <muleHttpConnectorTestVersion>1.1.0</muleHttpConnectorTestVersion>
        <muleFileConnectorTestVersion>1.1.1</muleFileConnectorTestVersion>

        <formatterConfigPath>formatter.xml</formatterConfigPath>
    </properties>

    <modules>
        <module>services-all</module>
        <module>bom</module>
        <module>embedded</module>
        <module>standalone</module>
        <module>tests</module>
    </modules>

    <profiles>
        <profile>
            <id>release</id>
            <properties>
                <skipGpg>false</skipGpg>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <version>${gpg.plugin.version}</version>
                        <executions>
                            <execution>
                                <id>sign-artifacts</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <skip>${skipGpg}</skip>
                            <gpgArguments>
                                <arg>--pinentry-mode</arg>
                                <arg>loopback</arg>
                            </gpgArguments>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
